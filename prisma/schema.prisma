generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Stream {
  id         String    @id @default(cuid())
  stream_url String    @unique
  title      String?
  icon       String?
  start_time DateTime  @default(now())
  captions   Caption[]
}

model Caption {
  id         String   @id @default(cuid())
  text       String
  created_at DateTime @default(now())

  stream_id String
  stream    Stream @relation(fields: [stream_id], references: [id])
}

model Trigger {
  id         String   @id @default(cuid())
  context    String
  created_at DateTime @default(now())
}
