generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Stream {
  id         String    @id @default(cuid())
  stream_url String    @unique
  title      String?
  icon       String?
  start_time DateTime  @default(now())
  captions   Caption[]
}

model Caption {
  id         String   @id @default(cuid())
  text       String
  created_at DateTime @default(now())

  stream_id String
  stream    Stream @relation(fields: [stream_id], references: [id])
}

model Story {
  id           String        @id @default(cuid())
  headline     String
  createdAt    DateTime      @default(now())
  developments Development[]
}

model Development {
  id        String   @id @default(cuid())
  createdAt DateTime @default(now())
  text      String
  blurb     Boolean  @default(false)
  story     Story    @relation(fields: [storyId], references: [id])
  storyId   String
  image     Image[]
}

model Image {
  id          String  @id @default(cuid())
  url         String
  description String?

  development   Development? @relation(fields: [developmentId], references: [id])
  developmentId String?
}

model Source {
  id   String  @id @default(cuid())
  url  String?
  text String?
}
